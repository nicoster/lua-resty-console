#!/bin/sh

# install package
luarocks make lua-resty-console-0.1.0-1.rockspec > /dev/null

mkdir -p logs
/usr/local/openresty/nginx/sbin/nginx -p $PWD -c conf/nginx.conf

suffix=.exp

RED='\033[0;31m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

before_each() rm -f /root/.luahistory # cleanup history file
fail() {
  printf "${RED}FAIL${NC}\n${RED}"
  expect -d $test_file
  printf "${NC}"
  printf '%80s\n' | tr ' ' -
}
ok() printf "${GREEN}OK${NC}\n"

run_test() {
  test_file=$1

  echo -n `basename -s $suffix $test_file`' .. '
  expect $test_file >> /dev/null
  [ $? = 0 ] && ok || fail $test_file
}

for fn in `ls ./expect/*$suffix`; do
  before_each
  run_test $fn
done

kill `cat logs/nginx.pid`
